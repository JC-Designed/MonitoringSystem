@{
    Layout = "_StudentLayout";
    ViewData["Title"] = "Dashboard";
}

<link rel="stylesheet" href="~/css/student.css" />

<div class="dashboard-bg py-5">
    <div class="container-fluid dashboard-container">
        <!-- FULL WIDTH -->
        <!-- ===== HEADER ===== -->
        <div class="text-center mb-5">
            <h1 class="fw-bold text-primary">@ViewData["Title"]</h1>
            <p class="text-muted">Welcome to the Student Panel</p>
        </div>

        <!-- ===== DASHBOARD CARDS ===== -->
        <div class="row g-4 justify-content-center text-center">

            <!-- Tasks -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="dashboard-link" data-bs-toggle="modal" data-bs-target="#tasksModal">
                    <div class="card dashboard-card task-card h-100 p-3">
                        <div class="icon-wrapper mb-3">
                            <i class="bi bi-clipboard-check-fill fs-1 text-primary"></i>
                        </div>
                        <h5 class="fw-bold">Tasks</h5>
                        <p class="text-muted">View and manage assigned tasks</p>
                    </div>
                </div>
            </div>

            <!-- Reports -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="dashboard-link" data-bs-toggle="modal" data-bs-target="#reportsModal">
                    <div class="card dashboard-card reports-card h-100 p-3">
                        <div class="icon-wrapper mb-3">
                            <i class="bi bi-file-earmark-text-fill fs-1 text-success"></i>
                        </div>
                        <h5 class="fw-bold">Reports</h5>
                        <p class="text-muted">Track submitted reports</p>
                    </div>
                </div>
            </div>

            <!-- Settings -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="dashboard-link" data-bs-toggle="modal" data-bs-target="#settingsModal">
                    <div class="card dashboard-card settings-card h-100 p-3">
                        <div class="icon-wrapper mb-3">
                            <i class="bi bi-gear-fill fs-1 text-warning"></i>
                        </div>
                        <h5 class="fw-bold">Settings</h5>
                        <p class="text-muted">Manage profile and security</p>
                    </div>
                </div>
            </div>

            <!-- Help -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="dashboard-link" data-bs-toggle="modal" data-bs-target="#helpModal">
                    <div class="card dashboard-card help-card h-100 p-3">
                        <div class="icon-wrapper mb-3">
                            <i class="bi bi-question-circle-fill fs-1 text-danger"></i>
                        </div>
                        <h5 class="fw-bold">Help & Support</h5>
                        <p class="text-muted">FAQs and support resources</p>
                    </div>
                </div>
            </div>

        </div>

        <!-- ===== CHART ===== -->
        <div class="row mt-5">
            <div class="col-12">
                <div class="card chart-card p-4" style="min-height: 350px;">
                    <h5 class="fw-bold text-center mb-4">
                        Tasks Completed (@DateTime.Now.Year)
                    </h5>
                    <div class="chart-wrapper w-100" style="min-height: 300px;">
                        <canvas id="tasksChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const monthlyTasks = [5, 8, 12, 7, 9, 10, 15, 6, 8, 11, 7, 10];
        const ctx = document.getElementById('tasksChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct','Nov','Dec'],
                datasets: [{
                    data: monthlyTasks,
                    backgroundColor: 'rgba(13,110,253,0.7)',
                    borderRadius: 6
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: { y: { beginAtZero: true } }
            }
        });
    </script>
}
