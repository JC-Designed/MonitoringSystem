@* _StudentLayout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Student Panel</title>
    
    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/student.css" />

    <style>
        /* Profile and banner wrappers */
        .profile-pic-wrapper, .banner-wrapper {
            text-align: center;
            margin-bottom: 1rem;
        }

            .profile-pic-wrapper img {
                width: 130px;
                height: 130px;
                object-fit: cover;
                border-radius: 50%;
                border: 2px solid #dee2e6;
            }

            .banner-wrapper img {
                width: 100%;
                height: 200px;
                object-fit: cover;
                border-radius: 0.25rem;
                border: 1px solid #dee2e6;
            }

        /* Buttons */
        .profile-edit-btn {
            display: inline-block;
            margin-top: 0.5rem;
            font-size: 0.85rem;
            min-width: 120px;
        }

        #editStudentInfoBtn {
            display: inline-block;
            margin-bottom: 0.5rem;
        }

        /* Info container */
        .student-info-container {
            position: relative;
            max-height: 400px;
            overflow-y: auto;
            border: 1px solid #dee2e6;
            border-radius: 0.25rem;
            padding: 1.5rem;
            margin-top: 0.5rem;
            background-color: #f8f9fa;
        }

        /* Info table styling */
        #studentInfoTable {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 0.5rem;
        }

            #studentInfoTable td {
                border: none !important;
                padding: 0.5rem 0.75rem;
            }

                #studentInfoTable td:first-child {
                    font-weight: 600;
                    color: #6c757d;
                    width: 30%;
                }

            #studentInfoTable input {
                width: 100%;
            }

        /* Save button */
        #saveStudentInfoBtn {
            position: absolute;
            bottom: 15px;
            right: 20px;
            z-index: 1050;
            display: block;
        }

        /* Modal body padding for save button */
        .modal-body {
            position: relative;
            padding-bottom: 80px;
        }

        /* Notifications */
        .notif-dot {
            width: 8px;
            height: 8px;
            background-color: red;
            border-radius: 50%;
            position: absolute;
            top: 0;
            right: 0;
        }

        .notif-popup {
            display: none;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="sidebar-overlay"></div>

    <!-- LEFT SIDEBAR -->
    <aside class="admin-sidebar">
        <div class="admin-logo-header">
            <img src="~/images/ctu-logo.png" class="admin-logo" />
            <div class="admin-logo-text">STUDENT PANEL</div>
        </div>

        <nav class="admin-menu">
            <a asp-action="Dashboard" asp-controller="StudentPanel" class="menu-link"><i class="bi bi-speedometer2"></i> <span>Dashboard</span></a>
            <a asp-action="Messages" asp-controller="StudentPanel" class="menu-link"><i class="bi bi-envelope-fill"></i> <span>Messages</span></a>
            <a asp-action="Tasks" asp-controller="StudentPanel" class="menu-link"><i class="bi bi-clipboard-check-fill"></i> <span>Task</span></a>
            <a asp-action="Reports" asp-controller="StudentPanel" class="menu-link"><i class="bi bi-file-earmark-text-fill"></i> <span>Reports</span></a>
            <hr />
        </nav>

        <!-- LOGOUT BUTTON (POST) -->
        <div class="sidebar-logout">
            <a href="javascript:void(0);" onclick="document.getElementById('studentLogoutForm').submit();" class="btn-logout">
                <i class="bi bi-box-arrow-right"></i> <span>Logout</span>
            </a>
            <form id="studentLogoutForm" asp-controller="Account" asp-action="Logout" method="post" class="d-none">
                @Html.AntiForgeryToken()
            </form>
        </div>
    </aside>

    <!-- TOP BAR -->
    <header class="admin-topbar d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center gap-2">
            <button class="btn btn-sm btn-light d-none d-md-inline-flex me-2" id="desktopSidebarToggle"><i class="bi bi-list"></i></button>
            <button class="btn btn-sm btn-light d-md-none me-2" id="sidebarToggle"><i class="bi bi-list"></i></button>
            <i class="bi bi-person-circle me-2"></i>
            <span class="topbar-title">@ViewData["Title"]</span>
        </div>

        <div class="d-flex align-items-center gap-3">
            <!-- Notifications -->
            <div class="position-relative" id="notifBell" style="cursor:pointer;">
                <i class="bi bi-bell-fill fs-5"></i>
                <span class="notif-dot"></span>
                <div class="notif-popup shadow-sm bg-white rounded p-2"
                     style="position:absolute; right:0; top:30px; width:300px; max-height:400px; overflow-y:auto; z-index:1050;">
                    <h6 class="fw-bold mb-2">Notifications</h6>
                    <ul id="notifList" class="list-unstyled mb-0"></ul>
                    <div class="text-center mt-2">
                        <button class="btn btn-sm btn-outline-secondary w-100" id="clearNotifsBtn">Mark all as read</button>
                    </div>
                </div>
            </div>

            <!-- Profile Dropdown -->
            <div class="dropdown">
                <div class="d-flex align-items-center gap-2 dropdown-toggle" role="button" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="cursor:pointer;">
                    <div class="d-flex flex-column" style="font-size: 0.75rem;" id="sidebarStudentName">
                        <strong id="sidebarStudentFullName">Student User</strong>
                        <span>Student</span>
                    </div>
                </div>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                    <li><a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#studentProfileModal" id="openProfileModalBtn">View Profile</a></li>
                    <li><a href="javascript:void(0);" onclick="document.getElementById('studentLogoutForm').submit();" class="dropdown-item">Logout</a></li>
                </ul>
            </div>
        </div>
    </header>

    <!-- MAIN CONTENT -->
    <main class="admin-content">
        @RenderBody()
    </main>

    <!-- PROFILE MODAL -->
    <div class="modal fade" id="studentProfileModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content p-4 border-0 shadow-sm">
                <div class="modal-header border-0">
                    <h5 class="modal-title fw-bold">Student Profile</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center">
                    <!-- Profile Pic -->
                    <div class="profile-pic-wrapper">
                        <img id="studentProfileImgModal" src="~/images/ctu-logo.png" class="shadow-sm mb-2" />
                    </div>
                    <div class="text-center mb-3">
                        <button class="btn btn-outline-primary btn-sm profile-edit-btn" id="editProfilePicBtnModal">EDIT</button>
                        <input type="file" id="profilePicInputModal" class="d-none" accept="image/*" onchange="previewImage(this,'studentProfileImgModal')" />
                    </div>

                    <!-- Banner -->
                    <div class="banner-wrapper">
                        <img id="studentBannerImgModal" src="~/images/banner-placeholder.jpg" class="shadow-sm mb-2" />
                    </div>
                    <div class="text-center mb-3">
                        <button class="btn btn-outline-primary btn-sm profile-edit-btn" id="editBannerBtnModal">EDIT</button>
                        <input type="file" id="bannerInputModal" class="d-none" accept="image/*" onchange="previewImage(this,'studentBannerImgModal')" />
                    </div>

                    <!-- Info Table -->
                    <div class="text-center mb-2">
                        <button class="btn btn-outline-primary btn-sm profile-edit-btn" id="editStudentInfoBtn"><i class="bi bi-pencil"></i> EDIT</button>
                    </div>
                    <div class="student-info-container">
                        <table class="table mb-0 table-borderless" id="studentInfoTable">
                            <tbody>
                                <tr><td>FirstName</td><td></td></tr>
                                <tr><td>LastName</td><td></td></tr>
                                <tr><td>Email</td><td>student@example.com</td></tr>
                                <tr><td>Contact</td><td></td></tr>
                                <tr><td>Address</td><td></td></tr>
                                <tr><td>Course</td><td></td></tr>
                                <tr><td>SchoolYear</td><td></td></tr>
                            </tbody>
                        </table>
                    </div>

                    <!-- Save button -->
                    <div class="text-end mt-3">
                        <button class="btn btn-danger" id="saveStudentInfoBtn">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const sidebar = document.querySelector('.admin-sidebar');
        const desktopToggle = document.getElementById('desktopSidebarToggle');
        const mobileToggle = document.getElementById('sidebarToggle');
        const overlay = document.querySelector('.sidebar-overlay');

        if(window.innerWidth >= 768) sidebar.classList.add('expanded');
        desktopToggle?.addEventListener('click', ()=> sidebar.classList.toggle('expanded'));
        mobileToggle?.addEventListener('click', ()=> { sidebar.classList.toggle('expanded'); overlay.classList.toggle('active'); });
        overlay?.addEventListener('click', ()=> { sidebar.classList.remove('expanded'); overlay.classList.remove('active'); });

        // Notifications
        const notifBell = document.getElementById('notifBell');
        const notifPopup = notifBell?.querySelector('.notif-popup');
        let notifications=[{id:1,text:"New message",read:false}];
        const notifDot = document.querySelector('.notif-dot');
        const notifList = document.getElementById('notifList');
        const clearNotifsBtn = document.getElementById('clearNotifsBtn');

        function renderNotifications(){
            notifList.innerHTML='';
            let unreadCount=0;
            notifications.forEach(notif=>{
                const li=document.createElement('li');
                li.textContent=notif.text;
                li.classList.toggle('fw-bold',!notif.read);
                li.style.cursor='pointer';
                li.addEventListener('click',()=>{notif.read=true; renderNotifications();});
                notifList.appendChild(li);
                if(!notif.read) unreadCount++;
            });
            notifDot.style.display = unreadCount>0 ? 'block' : 'none';
        }
        notifBell?.addEventListener('click', ()=>{ notifPopup.style.display = (notifPopup.style.display==='block')?'none':'block'; });
        clearNotifsBtn?.addEventListener('click', ()=>{ notifications.forEach(n=>n.read=true); renderNotifications(); });
        document.addEventListener('click', e=>{ if(!notifBell.contains(e.target)) notifPopup.style.display='none'; });
        renderNotifications();

        // Image preview
        function previewImage(input,imgId){
            const file=input.files[0];
            if(file){
                const reader=new FileReader();
                reader.onload=e=>document.getElementById(imgId).src=e.target.result;
                reader.readAsDataURL(file);
            }
        }
        document.getElementById('editProfilePicBtnModal')?.addEventListener('click', ()=> document.getElementById('profilePicInputModal').click());
        document.getElementById('editBannerBtnModal')?.addEventListener('click', ()=> document.getElementById('bannerInputModal').click());

        // Student info edit/save
        const editInfoBtn = document.getElementById('editStudentInfoBtn');
        const saveInfoBtn = document.getElementById('saveStudentInfoBtn');
        const studentInfoTable = document.getElementById('studentInfoTable');
        let isEditing=false;

        editInfoBtn?.addEventListener('click', ()=>{
            isEditing = !isEditing;
            studentInfoTable.querySelectorAll('tbody tr').forEach(row=>{
                const valCell = row.cells[1];
                if(isEditing){
                    const val = valCell.textContent.trim();
                    valCell.innerHTML = `<input type="text" class="form-control form-control-sm" value="${val}">`;
                } else {
                    const input = valCell.querySelector('input');
                    if(input) valCell.textContent = input.value;
                }
            });
            editInfoBtn.innerHTML = isEditing ? '<i class="bi bi-x-circle"></i> Cancel' : '<i class="bi bi-pencil"></i> EDIT';
        });

        document.getElementById('openProfileModalBtn')?.addEventListener('click', async ()=>{
            try{
                const res = await fetch('/StudentPanel/GetStudentProfile');
                const data = await res.json();
                if(data.success){
                    document.getElementById('studentProfileImgModal').src = data.profileImage;
                    document.getElementById('studentBannerImgModal').src = data.bannerImage;

                    const rows = studentInfoTable.querySelectorAll('tbody tr');
                    rows[0].cells[1].textContent = data.firstName || '';
                    rows[1].cells[1].textContent = data.lastName || '';
                    rows[2].cells[1].textContent = data.email;
                    rows[3].cells[1].textContent = data.contact;
                    rows[4].cells[1].textContent = data.address;
                    rows[5].cells[1].textContent = data.course;
                    rows[6].cells[1].textContent = data.schoolYear;

                    const fullName = (data.firstName || '') + ' ' + (data.lastName || '');
                    document.getElementById('sidebarStudentFullName').textContent = fullName.trim() || 'Student User';
                }
            }catch(err){ console.error(err); }
        });

        saveInfoBtn?.addEventListener('click', async ()=>{
            const profileFile = document.getElementById('profilePicInputModal').files[0];
            const bannerFile = document.getElementById('bannerInputModal').files[0];
            const formData = new FormData();
            if(profileFile) formData.append('ProfilePicture', profileFile);
            if(bannerFile) formData.append('BannerPicture', bannerFile);

            studentInfoTable.querySelectorAll('tbody tr').forEach(row=>{
                const key = row.cells[0].textContent.trim();
                const input = row.cells[1].querySelector('input');
                const value = input ? input.value : row.cells[1].textContent.trim();
                formData.append(key,value);
            });

            try{
                const res = await fetch('/StudentPanel/UpdateProfile', { method:'POST', body: formData });
                const data = await res.json();
                if(data.success){
                    alert('Profile updated successfully!');
                    bootstrap.Modal.getInstance(document.getElementById('studentProfileModal'))?.hide();

                    // Update sidebar name
                    const firstName = studentInfoTable.querySelector('tbody tr:nth-child(1) td:nth-child(2)').textContent.trim();
                    const lastName = studentInfoTable.querySelector('tbody tr:nth-child(2) td:nth-child(2)').textContent.trim();
                    const fullName = (firstName + ' ' + lastName).trim();
                    document.getElementById('sidebarStudentFullName').textContent = fullName || 'Student User';
                } else {
                    alert('Failed to update profile: ' + (data.message || ''));
                }
            }catch(err){ console.error(err); alert('Error updating profile.'); }
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
