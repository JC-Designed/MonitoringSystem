<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Monitoring System</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>
<body style="background-color:#fff5f5; display:flex; flex-direction:column; min-height:100vh;">
    <main role="main" class="flex-grow-1 d-flex justify-content-center align-items-center">
        @RenderBody()
    </main>

    <footer class="text-center py-3 text-muted" style="font-size:0.9rem;">
        © 2025 - Monitoring System | Designed by JC
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>



