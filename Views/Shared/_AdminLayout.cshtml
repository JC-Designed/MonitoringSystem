@* _AdminLayout.cshtml *@
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Admin Panel</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Profile.css" />
    <link rel="stylesheet" href="~/css/darkmode.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Overlay -->
    <div class="sidebar-overlay"></div>

    <!-- LEFT SIDEBAR -->
    <aside class="admin-sidebar">
        <div class="scroll-wrapper" style="flex:1; overflow-y:auto; scrollbar-width:none; -ms-overflow-style:none;">
            <style>
                .scroll-wrapper::-webkit-scrollbar {
                    display: none;
                }
            </style>

            <!-- Logo -->
            <div class="admin-logo-header">
                <img src="~/images/ctu-logo.png" class="admin-logo" />
                <div class="admin-logo-text">BALAMBAN CAMPUS</div>
            </div>

            <!-- Menu -->
            <nav class="admin-menu">
                <a asp-action="Dashboard" asp-controller="Admin" class="menu-link" id="dashboardBtn">
                    <i class="bi bi-speedometer2"></i> <span>Dashboard</span>
                </a>
                <a asp-action="Users" asp-controller="Admin" class="menu-link" id="usersBtn">
                    <i class="bi bi-person-fill"></i> <span>Users</span>
                </a>
                <a asp-action="Registration" asp-controller="Admin" class="menu-link" id="registrationBtn">
                    <i class="bi bi-building"></i> <span>Registration</span>
                </a>
                <a asp-action="Reports" asp-controller="Admin" class="menu-link" id="reportsBtn">
                    <i class="bi bi-file-bar-graph-fill"></i> <span>Reports</span>
                </a>
                <hr />
            </nav>

            <!-- Logout -->
            <div class="sidebar-logout">
                <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" class="d-none">
                    @Html.AntiForgeryToken()
                </form>
                <a href="javascript:void(0);" onclick="document.getElementById('logoutForm').submit();" class="btn-logout">
                    <i class="bi bi-box-arrow-right"></i> <span>Logout</span>
                </a>
            </div>
        </div>
    </aside>

    <!-- TOP BAR -->
    <header class="admin-topbar d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center gap-2">
            <button class="btn btn-sm btn-light d-none d-md-inline-flex me-2" id="desktopSidebarToggle">
                <i class="bi bi-list"></i>
            </button>
            <button class="btn btn-sm btn-light d-md-none me-2" id="sidebarToggle">
                <i class="bi bi-list"></i>
            </button>
            <i class="bi bi-house-fill me-2"></i>
            <span class="topbar-title">@ViewData["Title"]</span>
        </div>

        <div class="d-flex align-items-center gap-2">
            <!-- Dark Mode Toggle -->
            <div id="themeToggle" style="cursor:pointer;">
                <i class="bi bi-moon-fill fs-5" id="themeIcon"></i>
            </div>

            <!-- Notifications -->
            <div class="position-relative" id="notifBell" style="cursor:pointer;">
                <i class="bi bi-bell-fill fs-5"></i>
                <span class="notif-dot"></span>
            </div>

            <!-- Small Topbar Profile Picture -->
            <img src="/images/ctu-logo.png" id="topbarProfilePic" title="Profile Picture" />

            <!-- Profile Dropdown -->
            <div class="dropdown">
                <div class="d-flex align-items-center gap-2 dropdown-toggle" role="button" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="cursor:pointer;">
                    <div class="d-flex flex-column" style="font-size:0.75rem;">
                        <strong>Administrator</strong>
                        <span>Admin</span>
                    </div>
                </div>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                    <li><a class="dropdown-item" href="javascript:void(0);" id="viewProfileBtn">View Profile</a></li>
                    <li><a class="dropdown-item" href="javascript:void(0);" onclick="document.getElementById('logoutForm').submit();">Logout</a></li>
                </ul>
            </div>
        </div>
    </header>

    <!-- MAIN CONTENT -->
    <main class="admin-content" id="adminMainContent">
        @RenderBody()
    </main>

    <!-- PROFILE TEMPLATE -->
    <script type="text/template" id="profileTemplate">
        <div class="container py-4">
            <div class="profile-pic-wrapper mb-4 position-relative" style="width:140px; height:140px;">
                <img src="/images/ctu-logo.png" id="profileImage" class="rounded-circle border border-3 border-white" style="width:140px;height:140px;object-fit:cover;">
                <div class="profile-pic-overlay d-flex justify-content-center align-items-center" style="position:absolute; top:0; left:0; width:100%; height:100%; border-radius:50%; background:rgba(0,0,0,0.3); opacity:0; cursor:pointer; transition:opacity 0.2s;">
                    <i class="bi bi-camera-fill text-white fs-4"></i>
                </div>
                <div class="change-pic-icon position-absolute d-flex justify-content-center align-items-center" style="width:36px; height:36px; bottom:0; right:0; background:rgba(0,0,0,0.2); border-radius:50%; border:2px solid white; cursor:pointer;">
                    <i class="bi bi-camera-fill text-white"></i>
                </div>
                <input type="file" id="profilePicInput" accept="image/*" style="display:none;">
            </div>
            <div class="card shadow-sm p-4" style="max-width:1200px;">
                <div class="flex-grow-1 w-100">
                    <div class="row mb-3">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label for="fullName" class="form-label fw-bold">Full Name</label>
                            <input type="text" id="fullName" class="form-control" value="John Doe">
                        </div>
                        <div class="col-md-6">
                            <label for="position" class="form-label fw-bold">Position</label>
                            <input type="text" id="position" class="form-control" value="Administrator">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label for="username" class="form-label fw-bold">Username</label>
                            <input type="text" id="username" class="form-control" value="adminuser">
                        </div>
                        <div class="col-md-6">
                            <label for="email" class="form-label fw-bold">Email</label>
                            <input type="email" id="email" class="form-control" value="admin@ctu.edu.ph">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="address" class="form-label fw-bold">Address</label>
                        <textarea id="address" class="form-control">123 Main St, Balamban</textarea>
                    </div>
                    <div class="text-end">
                        <button class="btn" id="saveProfileBtn" style="background-color:#07B618; border-color:#07B618; color:white;">Save Changes</button>
                    </div>
                </div>
            </div>
        </div>
    </script>

    <!-- Notification Container -->
    <div id="notifContainer"></div>

    <!-- NOTIFICATION TEMPLATE (demo only) -->
    <script type="text/template" id="notifTemplate">
        <div class="container py-4">
            <h4 class="mb-4">Notification History</h4>

            <!-- Example Report Card 1 -->
            <div class="card shadow-sm mb-4 p-4 d-flex justify-content-between align-items-center"
                 style="max-width:90%; font-size:1.1rem; border-radius:25px; transform: scale(1.02);">
                <div class="d-flex justify-content-between w-100 align-items-center">
                    <div>
                        <h5 class="fw-bold mb-1">Demo Student 1</h5>
                        <small>Report: Complaint</small>
                    </div>
                    <!-- View icon -->
                    <button class="btn btn-outline-primary btn-sm viewReportBtn" data-bs-toggle="modal" data-bs-target="#reportModal"
                            data-student="Demo Student 1" data-report="This student is not registered in the company.">
                        <i class="bi bi-eye fs-5"></i>
                    </button>
                </div>
            </div>

            <!-- Example Report Card 2 -->
            <div class="card shadow-sm mb-4 p-4 d-flex justify-content-between align-items-center"
                 style="max-width:90%; font-size:1.1rem; border-radius:25px; transform: scale(1.02);">
                <div class="d-flex justify-content-between w-100 align-items-center">
                    <div>
                        <h5 class="fw-bold mb-1">Demo Student 2</h5>
                        <small>Report: MOA Submission</small>
                    </div>
                    <button class="btn btn-outline-primary btn-sm viewReportBtn" data-bs-toggle="modal" data-bs-target="#reportModal"
                            data-student="Demo Student 2" data-report="The student submitted all required MOA documents.">
                        <i class="bi bi-eye fs-5"></i>
                    </button>
                </div>
            </div>
        </div>
    </script>

    <!-- REPORT DETAILS MODAL -->
    <div class="modal fade" id="reportModal" tabindex="-1" aria-labelledby="reportModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content rounded-4">
                <div class="modal-header">
                    <h5 class="modal-title" id="reportModalLabel">Report Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Top: Student Name -->
                    <h3 class="fw-bold mb-3" id="modalStudent">Student Name</h3>
                    <hr>
                    <!-- Bottom: Report Content in a box -->
                    <div style="border:1px solid #ccc; border-radius:10px; padding:15px; background:#f8f9fa;">
                        <p id="modalReport" style="font-size:1.05rem; line-height:1.5;">Report content goes here.</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {

            const notifBell = document.getElementById("notifBell"); // the bell in topbar
            const mainContent = document.getElementById("adminMainContent"); // your page content area

            notifBell.addEventListener("click", function () {

                mainContent.style.opacity = 0;

                setTimeout(() => {

                    // Load notification template into MAIN CONTENT (not sidebar)
                    mainContent.innerHTML = document.getElementById("notifTemplate").innerHTML;

                    // Change title
                    document.querySelector(".topbar-title").textContent = "Notifications";

                    // Attach modal data events AFTER rendering
                    document.querySelectorAll(".viewReportBtn").forEach(btn => {
                        btn.addEventListener("click", function () {
                            document.getElementById("modalStudent").textContent = this.dataset.student;
                            document.getElementById("modalReport").textContent = this.dataset.report;
                        });
                    });

                    mainContent.style.opacity = 1;

                }, 200);
            });

        });
    </script>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const sidebar = document.querySelector('.admin-sidebar');
        const desktopToggle = document.getElementById('desktopSidebarToggle');
        const mobileToggle = document.getElementById('sidebarToggle');
        const overlay = document.querySelector('.sidebar-overlay');

        if(window.innerWidth >= 768) sidebar.classList.add('expanded');

        desktopToggle?.addEventListener('click', ()=>sidebar.classList.toggle('expanded'));
        mobileToggle?.addEventListener('click', ()=>{
            sidebar.classList.toggle('expanded');
            overlay.classList.toggle('active');
        });
        overlay?.addEventListener('click', ()=>{
            sidebar.classList.remove('expanded');
            overlay.classList.remove('active');
        });

        const mainContent = document.getElementById("adminMainContent");
        const viewProfileBtn = document.getElementById("viewProfileBtn");
        const notifBell = document.getElementById("notifBell");
        const topbarProfilePic = document.getElementById("topbarProfilePic");
        const originalDashboardHTML = mainContent.innerHTML;

        // PROFILE SPA
        function openProfileSPA(){
            mainContent.style.opacity = 0;
            setTimeout(()=>{
                const template = document.getElementById("profileTemplate").innerHTML;
                mainContent.innerHTML = template;
                document.querySelector(".topbar-title").textContent = "Profile";

                const profileImage = document.getElementById("profileImage");
                const profileOverlay = document.querySelector(".profile-pic-overlay");
                const profilePicInput = document.getElementById("profilePicInput");

                profileOverlay.addEventListener("click", ()=> profilePicInput.click());
                const changePicIcon = document.querySelector(".change-pic-icon");
                changePicIcon.addEventListener("click", ()=> profilePicInput.click());

                profilePicInput.addEventListener("change", (e)=>{
                    if(e.target.files && e.target.files[0]){
                        const reader = new FileReader();
                        reader.onload = function(evt){
                            profileImage.src = evt.target.result;
                            topbarProfilePic.src = evt.target.result;
                        }
                        reader.readAsDataURL(e.target.files[0]);
                    }
                });

                mainContent.style.opacity = 1;
            },200);
        }

        viewProfileBtn?.addEventListener("click", openProfileSPA);

        // DASHBOARD / MENU SPA
        function restoreOriginalContent(title){
            mainContent.style.opacity = 0;
            setTimeout(()=>{
                mainContent.innerHTML = originalDashboardHTML;
                document.querySelector(".topbar-title").textContent = title;
                mainContent.style.opacity = 1;
            },200);
        }

        document.getElementById("dashboardBtn")?.addEventListener("click", ()=> restoreOriginalContent("Dashboard"));
        document.getElementById("usersBtn")?.addEventListener("click", ()=> restoreOriginalContent("Users"));
        document.getElementById("registrationBtn")?.addEventListener("click", ()=> restoreOriginalContent("Registration"));
        document.getElementById("reportsBtn")?.addEventListener("click", ()=> restoreOriginalContent("Reports"));

        // NOTIFICATIONS SPA
        notifBell?.addEventListener("click", ()=>{
            mainContent.style.opacity = 0;
            setTimeout(()=>{
                const notifTemplate = document.getElementById("notifTemplate").innerHTML;
                mainContent.innerHTML = notifTemplate;
                document.querySelector(".topbar-title").textContent = "Notifications";
                mainContent.style.opacity = 1;
            },200);
        });

        // Dark Mode
        const themeToggle = document.getElementById("themeToggle");
        const themeIcon = document.getElementById("themeIcon");
        if(localStorage.getItem("darkMode")==="true"){
            document.body.classList.add("dark-mode");
            themeIcon.classList.replace("bi-moon-fill","bi-sun-fill");
        }
        themeToggle?.addEventListener("click", ()=>{
            document.body.classList.toggle("dark-mode");
            const isDark = document.body.classList.contains("dark-mode");
            themeIcon.classList.toggle("bi-moon-fill",!isDark);
            themeIcon.classList.toggle("bi-sun-fill",isDark);
            localStorage.setItem("darkMode",isDark);
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
