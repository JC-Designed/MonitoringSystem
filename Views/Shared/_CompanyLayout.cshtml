@* _CompanyLayout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Company Panel</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

    <style>
        .notif-dot {
            position: absolute;
            top: 2px;
            right: 2px;
            width: 8px;
            height: 8px;
            background: red;
            border-radius: 50%;
            display: none;
        }

        .profile-pic-wrapper img {
            width: 140px;
            height: 140px;
            object-fit: cover;
            border-radius: 50%;
        }

        .banner-wrapper img {
            width: 100%;
            height: 180px;
            object-fit: cover;
            border-radius: 0.25rem;
        }

        .profile-edit-btn {
            font-size: 0.85rem;
            min-width: 120px;
        }

        .company-info-container {
            max-height: 350px;
            overflow-y: auto;
            border: 1px solid #dee2e6;
            border-radius: 0.25rem;
            padding: 1.5rem;
        }

        #companyInfoTable td {
            border: none !important;
            padding: 0.5rem 0;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>

<body>
    <div class="sidebar-overlay"></div>

    <!-- SIDEBAR -->
    <aside class="admin-sidebar">
        <div class="admin-logo-header">
            <img src="~/images/ctu-logo.png" class="admin-logo" />
            <div class="admin-logo-text">COMPANY PANEL</div>
        </div>

        <nav class="admin-menu">
            <a asp-action="Dashboard" asp-controller="CompanyPanel" class="menu-link">
                <i class="bi bi-speedometer2"></i> <span>Dashboard</span>
            </a>
            <a asp-action="Messages" asp-controller="CompanyPanel" class="menu-link">
                <i class="bi bi-envelope-fill"></i> <span>Messages</span>
            </a>
            <a asp-action="ManageOJT" asp-controller="CompanyPanel" class="menu-link">
                <i class="bi bi-people-fill"></i> <span>Manage OJT</span>
            </a>
            <a asp-action="Reports" asp-controller="CompanyPanel" class="menu-link">
                <i class="bi bi-file-earmark-text-fill"></i> <span>Reports</span>
            </a>
            <hr />
        </nav>

        <div class="sidebar-logout">
            <a asp-action="Logout" asp-controller="Account" class="btn-logout">
                <i class="bi bi-box-arrow-right"></i> <span>Logout</span>
            </a>
        </div>
    </aside>

    <!-- TOP BAR -->
    <header class="admin-topbar d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center gap-2">
            <button class="btn btn-sm btn-light d-none d-md-inline-flex me-2" id="desktopSidebarToggle">
                <i class="bi bi-list"></i>
            </button>
            <button class="btn btn-sm btn-light d-md-none me-2" id="sidebarToggle">
                <i class="bi bi-list"></i>
            </button>
            <i class="bi bi-building me-2"></i>
            <span class="topbar-title">@ViewData["Title"]</span>
        </div>

        <div class="d-flex align-items-center gap-3">
            <!-- Notifications -->
            <div class="position-relative" id="notifBell" style="cursor:pointer;">
                <i class="bi bi-bell-fill fs-5"></i>
                <span class="notif-dot"></span>
                <div class="notif-popup shadow-sm bg-white rounded p-2"
                     style="display:none; position:absolute; right:0; top:30px; width:300px;">
                    <h6 class="fw-bold mb-2">Notifications</h6>
                    <ul id="notifList" class="list-unstyled mb-0"></ul>
                </div>
            </div>

            <!-- Profile -->
            <div class="dropdown">
                <div class="dropdown-toggle" data-bs-toggle="dropdown" style="cursor:pointer;">
                    <strong>Company</strong>
                </div>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                        <a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#companyProfileModal">
                            View Profile
                        </a>
                    </li>
                    <li><a class="dropdown-item" asp-action="Logout" asp-controller="Account">Logout</a></li>
                </ul>
            </div>
        </div>
    </header>

    <!-- MAIN -->
    <main class="admin-content">
        @RenderBody()
    </main>

    <!-- COMPANY PROFILE MODAL -->
    <div class="modal fade" id="companyProfileModal" tabindex="-1">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content p-4 border-0 shadow-sm">
                <div class="modal-header border-0">
                    <h5 class="modal-title fw-bold">Company Profile</h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">

                    <!-- PROFILE PIC -->
                    <div class="profile-pic-wrapper text-center mb-2">
                        <img id="companyProfileImg" src="~/images/ctu-logo.png" />
                    </div>
                    <div class="text-center mb-3">
                        <button class="btn btn-outline-primary btn-sm profile-edit-btn" id="editCompanyPicBtn">
                            Edit Profile
                        </button>
                        <input type="file" id="companyPicInput" class="d-none" accept="image/*"
                               onchange="previewImage(this,'companyProfileImg')" />
                    </div>

                    <!-- BANNER -->
                    <div class="banner-wrapper text-center mb-2">
                        <img id="companyBannerImg" src="~/images/banner-placeholder.jpg" />
                    </div>
                    <div class="text-center mb-3">
                        <button class="btn btn-outline-primary btn-sm profile-edit-btn" id="editCompanyBannerBtn">
                            Edit Banner
                        </button>
                        <input type="file" id="companyBannerInput" class="d-none" accept="image/*"
                               onchange="previewImage(this,'companyBannerImg')" />
                    </div>

                    <!-- INFO -->
                    <div class="text-center mb-2">
                        <button class="btn btn-outline-primary btn-sm" id="editCompanyInfoBtn">
                            <i class="bi bi-pencil"></i> Edit Info
                        </button>
                    </div>

                    <div class="company-info-container">
                        <table class="table mb-0" id="companyInfoTable">
                            <tbody>
                                <tr><td class="fw-semibold text-muted">Company Name</td><td>ABC Corporation</td></tr>
                                <tr><td class="fw-semibold text-muted">Email</td><td>company@email.com</td></tr>
                                <tr><td class="fw-semibold text-muted">Contact</td><td>09123456789</td></tr>
                                <tr><td class="fw-semibold text-muted">Address</td><td>Cebu City</td></tr>
                                <tr><td class="fw-semibold text-muted">Industry</td><td>IT Services</td></tr>
                                <tr><td class="fw-semibold text-muted">Status</td><td><span class="badge bg-success">Active</span></td></tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="text-end mt-3">
                        <button class="btn btn-primary d-none" id="saveCompanyInfoBtn">Save</button>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function previewImage(input, targetId) {
            const file = input.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = e => document.getElementById(targetId).src = e.target.result;
                reader.readAsDataURL(file);
            }
        }

        document.getElementById('editCompanyPicBtn').onclick =
            () => document.getElementById('companyPicInput').click();

        document.getElementById('editCompanyBannerBtn').onclick =
            () => document.getElementById('companyBannerInput').click();

        const editBtn = document.getElementById('editCompanyInfoBtn');
        const saveBtn = document.getElementById('saveCompanyInfoBtn');
        const table = document.getElementById('companyInfoTable');
        let editing = false;

        editBtn.onclick = () => {
            editing = !editing;
            table.querySelectorAll('tr').forEach(row => {
                const cell = row.cells[1];
                if (editing) {
                    cell.innerHTML = `<input class="form-control form-control-sm" value="${cell.textContent.trim()}">`;
                } else {
                    const input = cell.querySelector('input');
                    if (input) cell.textContent = input.value;
                }
            });
            editBtn.innerHTML = editing ? '<i class="bi bi-x-circle"></i> Cancel' : '<i class="bi bi-pencil"></i> Edit Info';
            saveBtn.classList.toggle('d-none', !editing);
        };
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
