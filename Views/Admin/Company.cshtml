@model List<MonitoringSystem.Models.Company>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "COMPANIES";
}

<div class="companies-page container-fluid py-4">
    <div class="card shadow-sm rounded-4 p-4">

        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h5 class="fw-bold mb-0">COMPANY LIST</h5>
        </div>

        <!-- ================= FILTERS ================= -->
        <div class="row g-3 mb-4 align-items-end">
            <div class="col-md-12">
                <label class="form-label fw-semibold">Search by Name</label>
                <input type="text"
                       id="searchName"
                       class="form-control filter-box"
                       placeholder="Type name..." />
            </div>
        </div>

        <!-- ================= COMPANY TABLE ================= -->
        <div class="table-responsive">
            <table class="table table-hover table-borderless align-middle mb-0" id="companyTable">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Industry</th>
                        <th class="text-end">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var company in Model)
                    {
                        <tr data-id="@company.Id"
                            data-name="@company.Name"
                            data-email="@company.Email"
                            data-industry="@company.Industry">

                            <td>@company.Id</td>
                            <td>@company.Name</td>
                            <td>@company.Email</td>
                            <td>@company.Industry</td>
                            <td class="text-end">
                                <div class="dropdown dropend dropend-lg d-inline-block">
                                    <button class="btn btn-sm btn-light dropdown-toggle"
                                            type="button"
                                            data-bs-toggle="dropdown"
                                            aria-expanded="false"></button>

                                    <ul class="dropdown-menu shadow-sm bg-white">
                                        <li><button class="dropdown-item view-btn" type="button">View Profile</button></li>
                                        <li>
                                            <form method="post" action="@Url.Action("DeleteCompany", "Admin", new { id = company.Id })"
                                                  onsubmit="return confirm('Are you sure you want to delete @company.Name?');">
                                                <button type="submit" class="dropdown-item text-danger">Delete</button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- ================= VIEW PROFILE MODAL ================= -->
<div class="modal fade" id="viewModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Company Profile</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label fw-semibold">Name</label>
                    <input type="text" id="viewName" class="form-control" readonly>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold">Email</label>
                    <input type="text" id="viewEmail" class="form-control" readonly>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold">Industry</label>
                    <input type="text" id="viewIndustry" class="form-control" readonly>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ================= SCRIPT ================= -->
<script>
    const tbody = document.querySelector("#companyTable tbody");

    // ===== FILTER TABLE =====
    document.getElementById("searchName").addEventListener("input", () => {
        const val = document.getElementById("searchName").value.toLowerCase();
        [...tbody.rows].forEach(row => {
            row.style.display = row.dataset.name.toLowerCase().includes(val) ? "" : "none";
        });
    });

    // ===== VIEW PROFILE MODAL =====
    document.querySelectorAll(".view-btn").forEach(btn => {
        btn.addEventListener("click", e => {
            e.preventDefault();
            const row = btn.closest("tr");

            document.getElementById("viewName").value = row.dataset.name;
            document.getElementById("viewEmail").value = row.dataset.email;
            document.getElementById("viewIndustry").value = row.dataset.industry;

            bootstrap.Modal.getOrCreateInstance(viewModal).show();
        });
    });
</script>
